<Window x:Class="SMC.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMC"
        x:Name="window"
        mc:Ignorable="d"
        Title="Details" Height="450" Width="398">
    <Grid DataContext="{Binding ElementName=window}">
        <StackPanel Background="White">
            <TextBlock></TextBlock>

            <Image Margin="1" Height="215" Width="215" Source="{Binding _stu.StuProfilePath}" Stretch="UniformToFill"/>


            <TextBlock Height="22"></TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="152"></TextBlock>
                <TextBlock Height="58" Width="154"  Text="{Binding _stu.StuName}" FontSize="48" FontWeight="Bold"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
