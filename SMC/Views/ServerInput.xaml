<Window x:Class="SMC.ServerInput"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMC"
        mc:Ignorable="d"
        Title="ServerInput" Height="151" Width="250" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Height="15"></TextBlock>
        <TextBox x:Name="tb" Padding="6" Width="229" Height="35" Text="请输入ip地址" FontSize="14" Foreground="DarkGray" PreviewMouseDown="tb_MouseLeftButtonDown"></TextBox>
        <TextBlock Height="14"></TextBlock>
        <Button Height="40" Width="137" Content="确定" FontSize="14" Click="Button_Click"></Button>
    </StackPanel>
</Window>
