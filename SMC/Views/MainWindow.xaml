<Window x:Class="SMC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SMC"
        mc:Ignorable="d"
        Title="MainWindow" Height="565" Width="1030">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="435*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="101*"/>
            <ColumnDefinition Width="364*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <Button Content="获取服务器时间" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="51" Width="124" Click="Button_Click" Grid.Row="1"/>
        <ScrollViewer Grid.Column="1" Grid.Row="1" >
            <ListBox x:Name="lb" PreviewMouseWheel="listBoxDevice_PreviewMouseWheel"></ListBox>
        </ScrollViewer>
        
    </Grid>
</Window>
